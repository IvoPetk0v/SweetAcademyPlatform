@model AddChefViewModel

@{
    ViewData["Title"] = "Add Chef";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="Admin" asp-controller="Chef" asp-action="Add" method="post">
            <div class="mb-3">
                <select class="form-select" asp-for="ApplicationUserId">
                    <option value="">Choose from Users</option>
                    @foreach (var u in Model.Users)
                    {
                        <option value="@u.Id">@u.UserName</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.FullName" class="form-label">Full name</label>
                <input asp-for="@Model.FullName" class="form-control" aria-required="true" placeholder="Full name"/>
                <span asp-validation-for="@Model.FullName" class="text-danger"></span>
            </div>
            <div class="mb-3 input-group">
                <label asp-for="@Model.PhoneNumber" class="form-label">Phone number</label>
                <span class="input-group-text" id="basic-addon1">+359(0)</span>
                <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" placeholder="Phone number" aria-describedby="basic-addon1"/>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TaxPerTrainingForStudent" class="form-label">Charge tax for every student in training</label>
                <input asp-for="@Model.TaxPerTrainingForStudent" class="form-control" aria-required="true" type="number" value="0.00" step="0.01"/>
                <span asp-validation-for="@Model.TaxPerTrainingForStudent" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add The Chef"/>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add The Chef"/>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}