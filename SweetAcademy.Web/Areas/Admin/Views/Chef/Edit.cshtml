@model ChefViewModel
    
@{
    ViewData["Title"] = "Edit Chef";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="Admin" asp-controller="Chef" asp-action="Edit" method="post">
            <div class="mb-3 d-none">
                <select class="form-select" asp-for="ApplicationUserId">
                    <option value="@Model.ApplicationUserId"></option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.FullName" class="form-label">Full name</label>
                <input asp-for="@Model.FullName" class="form-control" aria-required="true" placeholder="Full name" value="@Model.FullName"/>
                <span asp-validation-for="@Model.FullName" class="text-danger"></span>
            </div>
            <div class="mb-3 input-group">

                <label asp-for="@Model.PhoneNumber" class="form-label text-center">Phone number </label>
                <br/>
                <span class="input-group-text text-center ms-1" id="basic-addon1">+359(0)</span>
                <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" placeholder="899900900" aria-describedby="basic-addon1" value="@Model.PhoneNumber"/>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TaxPerTrainingForStudent" class="form-label">Charge tax for every student in training</label>
                <input asp-for="@Model.TaxPerTrainingForStudent" class="form-control" aria-required="true" type="number" value="@Model.TaxPerTrainingForStudent" step="0.01"/>
                <span asp-validation-for="@Model.TaxPerTrainingForStudent" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Save changes !"/>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}