@using System.Security.Claims
@using SweetAcademy.Services.Data.Interfaces
@inject IChefService ChefService
@{
    bool IsChef = false;
    if (User.Identity.Name!=null)
    {
        Guid userId =Guid.Parse( User.FindFirstValue(ClaimTypes.NameIdentifier));
         IsChef = await ChefService.ChefExistByUserIdAsync(userId);
    }
   
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Steff`s Sweet Academy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SweetAcademy.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fs-5 fw-bold ms-3" asp-area="" asp-controller="Home" asp-action="Index">Steff`s Sweet Academy &trade;</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole(RoleAdminName))
                        {
                            <div class="dropdown ms-3">
                                <a class="btn btn-primary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Show All:
                                </a>

                                <ul class="dropdown-menu fw-bold">
                                    <li class="nav-item">
                                        <a class="nav-link text-center text-dark fw-bold bg-primary" asp-area="Admin" asp-controller="Product" asp-action="AllProducts">All Products</a>
                                    </li>
                                    <hr/>
                                    <li class="nav-item">
                                        <a class="nav-link text-center text-dark fw-bold bg-primary" asp-area="Admin" asp-controller="Recipe" asp-action="AllRecipes">All Recipes</a>
                                    </li>
                                    <hr>
                                    <li class="nav-item">
                                        <a class="nav-link text-center text-dark fw-bold bg-primary" asp-area="Admin" asp-controller="Chef" asp-action="All">All Chefs</a>
                                    </li>
                                    <hr>
                                    <li class="nav-item">
                                        <a class="nav-link  text-center text-dark fw-bold bg-primary" asp-area="Admin" asp-controller="Training" asp-action="All">All Trainings</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="dropdown ms-3">
                                <a class="btn btn-primary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Create New:
                                </a>

                                <ul class="dropdown-menu fw-bold">
                                    <li class="nav-item">
                                        <a class="nav-link text-center text-dark fw-bold bg-success" asp-area="Admin" asp-controller="Product" asp-action="AddProducts">Add Products</a>
                                    </li>
                                    <hr/>
                                    <li class="nav-item">
                                        <a class="nav-link text-center text-dark fw-bold bg-success" asp-area="" asp-controller="Recipe" asp-action="AddRecipe">Add Recipe</a>
                                    </li>
                                    <hr/>
                                    <li class="nav-item">
                                        <a class="nav-link text-center text-dark fw-bold bg-success" asp-area="Admin" asp-controller="Chef" asp-action="Add">Add Chef</a>
                                    </li>
                                    @if (IsChef)
                                    {
                                        <hr />
                                    <li class="nav-item">
                                            <a class="nav-link text-center text-dark fw-bold bg-success" asp-area="" asp-controller="Training" asp-action="Add">Add Training</a>
                                    </li>
                                    }
                                </ul>
                            </div>
                         
                            
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold bg-secondary border border-5 rounded-pill ms-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold bg-primary border border-5 rounded-pill ms-5" asp-area="" asp-controller="Product" asp-action="AllProducts">All Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold bg-primary border border-5 rounded-pill" asp-area="" asp-controller="Recipe" asp-action="AllRecipes">All Recipes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold bg-primary border border-5 rounded-pill" asp-area="" asp-controller="Chef" asp-action="All">All Chefs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold bg-primary border border-5 rounded-pill" asp-area="" asp-controller="Training" asp-action="All">All Trainings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold bg-success border border-5 rounded-pill ms-5" asp-area="" asp-controller="Recipe" asp-action="AddRecipe">Add Recipe</a>
                            </li>
                            
                            if (IsChef)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark fw-bold bg-success border border-5 rounded-pill" asp-area="" asp-controller="Training" asp-action="Add">Add Training</a>
                                </li>
                            }
                        }
                     
                      
                      


                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Steff`s Sweet Academy
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
