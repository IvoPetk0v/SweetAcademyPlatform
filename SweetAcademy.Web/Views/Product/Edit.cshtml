@model ProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Product</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" value="@Model.Name" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Unit" class="form-label">Measurements unit</label>
                <input asp-for="@Model.Unit" class="form-control" aria-required="true" value="@Model.Unit" />
                <span asp-validation-for="@Model.Unit" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label">Price Per Package</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" type="number" value="@Model.Price" step="0.01" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Save product changes" />
            </div>

        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}