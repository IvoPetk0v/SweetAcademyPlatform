@model ShowRecipeViewModel

@{
    ViewData["Title"] = "Recipe`s details for:";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="mb-3">
    <div class="row container d-flex justify-content-center">
        <h3 class="text-center fw-bold fs-2">@Model.Name</h3>
        <br />
        <div class="row">
            <div class="card col-4 " style="width: 20rem; ">
                <img src="@Model.ImageUrl" class="text-center" alt="@Model.Name image" />
            </div>
            <div class="card col-8">
                <label class="fs-4 fw-bold text-center">Description:</label>
                <p>@Model.Description</p>
            </div>

        </div>
    </div>
</div>

<div class="mb-3">
    <div class="row container d-flex justify-content-center">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center fw-bold fs-4"> List of products needed: </h5>
                    <hr>
                    <div class="table-responsive">
                        <table id="product" class="table table-striped table-hover text-center">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Package volume</th>
                                    <th>Quantity per package</th>
                                    <th>Price per package</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model.Products)
                                {
                                    <tr class="productRow">
                                        <td><label>@p.Name</label> </td>
                                        <td><label>@p.Unit</label> </td>
                                        <td><label>@p.Quantity</label></td>
                                        <td><label>@p.Price BGN</label></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="mb-3">
    <div class="row container d-flex justify-content-center">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center fw-bold fs-4"> Recipe for @Model.Name Steps: </h5>
                    <hr>
                    <div class="table-responsive">
                        <table id="faqs" class="table table-hover">
                            <thead>
                                <tr>
                                    <th class=" fs-5 text-center text-white bg-dark">Use checkbox marking when you are cooking.It will help you trace your progress on steps. </th>
                                    <th class="text-center">
                                        <img class="text-center" src="/CheckedIcon.png" alt="checked img" />
                                        <br />
                                        <label>Checked</label>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var step in Model.Steps)
                                {
                                    <tr>
                                        <td><p>@step</p></td>
                                        <td class="text-center"><input type="checkbox" class="form-check-input btn-dark text-white " /></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

